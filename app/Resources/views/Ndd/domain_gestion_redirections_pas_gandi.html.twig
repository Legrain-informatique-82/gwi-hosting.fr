{% extends 'base.html.twig' %}

{% block body %}

    <!-- Site wrapper -->
    <div class="wrapper">

        {% include 'header.html.twig' %}
        <!-- =============================================== -->
        {% include 'sidebar.html.twig' %}
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <img src="{{ asset('images/domaine.png') }}" alt="">
                    Gestion des redirections sur le domaine {{ ndd }}
                </h1>

                {% include 'breadcrumb.html.twig'  with {'breadcrumb': breadcrumb} only %}


            </section>

            <!-- Main content -->
            <section class="content">

                {% include 'flashMessage.html.twig' %}
              <div>
                  La gestion des redirections n'est possible que si vous choisissez les DNS par défaut.
                  <br/>Si c'est déjà le cas, Merci de rafraichir cette page.
              </div>
<p>
    {% if type=='super_admin'  %}
        <a href="{{ path('ndd_super_admin',{'idagency':idagency,'iduser':iduser,'ndd':ndd}) }}" class="btn btn-default">Retour à la fiche</a>
    {%  elseif type=='admin' %}
        <a href="{{ path('ndd_admin',{'iduser':iduser,'ndd':ndd}) }}" class="btn btn-default">Retour à la fiche</a>
    {% else %}
        <a href="{{ path('ndd_user',{'ndd':ndd}) }}" class="btn btn-default">Retour à la fiche</a>
    {% endif %}

</p>
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        {% include 'footer.html.twig' %}




    </div><!-- ./wrapper -->
{% endblock %}
