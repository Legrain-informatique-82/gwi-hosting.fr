{% extends 'base.html.twig' %}

{% block body %}

    <!-- Site wrapper -->
    <div class="wrapper">

        {% include 'header.html.twig' %}
        <!-- =============================================== -->
        {% include 'sidebar.html.twig' %}
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <img src="{{ asset('images/domaine.png') }}" alt="">
                    Gestion des redirections sur le domaine {{ ndd }}
                </h1>

                {% include 'breadcrumb.html.twig'  with {'breadcrumb': breadcrumb} only %}


            </section>

            <!-- Main content -->
            <section class="content">

                {{ form_start(form) }}
                {{ form_errors(form) }}


                <div class="row">
                    <div class="col-xs-2">
                        {{ form_label(form.type) }}
                    </div>
                    <div class="col-xs-5">
                        {{ form_widget(form.type) }}
                    </div>
                </div>
                <div class="row mt20">
                    <div class="col-xs-2">
                        {{ form_label(form.host) }}
                    </div>
                    <div class="col-xs-5">
                        {{ form_widget(form.host) }}
                        <p class="text-muted help-block">Vous pouvez utiliser une '*' pour tous les sous-domaines OU laisser vide pour le nom de domaine (http://domain.com)</p>
                    </div>
                    <div class="col-xs-5">
                        .{{ ndd }}
                    </div>

                </div>
                <div class="row mt20">
                    <div class="col-xs-2">
                        {{ form_label(form.url) }}
                    </div>
                    <div class="col-xs-1">
                        {{ form_widget(form.protocol) }}
                    </div>
                    <div class="col-xs-4">
                        {{ form_widget(form.url) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        {% include 'footer.html.twig' %}




    </div><!-- ./wrapper -->
{% endblock %}
